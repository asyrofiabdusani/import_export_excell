<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asyrofiabdusani.ranknasapp.EksportData.EksportActivity"
    tools:showIn="@layout/app_bar_eksport"
    style="@style/header_space"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eksport Data Nasabah"
        style="@style/header_text"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Untuk Melihat Laporan Ikuti Langkah - Langkah BErikut Ini :"
        style="@style/body_text"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Buka FILE MANAGER di Perangkat Anda"
        style="@style/body_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Pilih Folder LAPORAN NASABAH"
        style="@style/body_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Jika Anda Telah Beberapa Kali Melakukan Eksport Data, Maka Akan Ada Beberapa Pilihan Folder Yang Berisi File Laporan.xls"
        style="@style/body_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Folder Dinamakan Berdasarkkan Waktu Anda Melakukan Eksport Data"
        style="@style/body_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Contoh : Jika Anda Melakukan Eksport Pada Tanggal 08-12-2018 Pukul 11:32, Maka Folder Akan Bernama 081220181132"
        style="@style/body_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Pilih Salah Satu Folder Untuk Melihat Laporan Yang Anda Inginkan"
        style="@style/body_text"/>


</LinearLayout>
